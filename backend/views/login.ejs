    <!-- Section: Design Block -->
<section class="background-radial-gradient overflow-hidden">
    <style>
      .background-radial-gradient {
        background-color: hwb(240 6% 47%);
        background-image: radial-gradient(650px circle at 0% 0%,
            hsl(245, 54%, 52%) 15%,
            hsl(283, 61%, 75%) 35%,
            hsl(248, 79%, 34%) 75%,
            hsl(225, 75%, 47%) 80%,
            transparent 100%),
      }
  
      #radius-shape-1 {
        height: 220px;
        width: 220px;
        top: -60px;
        left: -130px;
        background: radial-gradient(#731dbf, #a56ec4);
        overflow: hidden;
      }
  
      #radius-shape-2 {
        border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
